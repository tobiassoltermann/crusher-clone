body {
  background-color: black;
  font-family: Source Sans Pro;
  font-size: 20px;
}

#main {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

#gameArea {
  align: center;
  width: 90%;
  margin: 0 auto;
  object-fit: contain;
}
.score {
  margin-right: 60px;
}
.scoretitle {
  font-weight: bold;
}

#statstable {
  width: 100%;
  text-align: left;
  padding-top: 10px;
}

td {
  text-align: left;
  padding-top: 10px;
}

#statspanel {
  color: white;
  bottom: 0px;
  text-align: center;
}

.airprogressSmall {
  position: relative;
  height: 100px;
  width: 20px;
  background: #3a3a3a; /* Old browsers */
  background: -moz-linear-gradient(left,  #3a3a3a 0%, #1c1c1c 50%, #3a3a3a 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, right top, color-stop(0%,#3a3a3a), color-stop(50%,#1c1c1c), color-stop(100%,#3a3a3a)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(left,  #3a3a3a 0%,#1c1c1c 50%,#3a3a3a 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(left,  #3a3a3a 0%,#1c1c1c 50%,#3a3a3a 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(left,  #3a3a3a 0%,#1c1c1c 50%,#3a3a3a 100%); /* IE10+ */
  background: linear-gradient(to right,  #3a3a3a 0%,#1c1c1c 50%,#3a3a3a 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#3a3a3a', endColorstr='#3a3a3a',GradientType=1 ); /* IE6-9 */


}

.airprogressSmallInner {
  position: absolute;
  width: 100%;
  bottom: 0;
  height: 100%;
  background: #7db9e8; /* Old browsers */
  background: -moz-linear-gradient(left,  #7db9e8 1%, #207cca 15%, #1e5799 44%, #207cca 85%, #2989d8 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, right top, color-stop(1%,#7db9e8), color-stop(15%,#207cca), color-stop(44%,#1e5799), color-stop(85%,#207cca), color-stop(100%,#2989d8)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(left,  #7db9e8 1%,#207cca 15%,#1e5799 44%,#207cca 85%,#2989d8 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(left,  #7db9e8 1%,#207cca 15%,#1e5799 44%,#207cca 85%,#2989d8 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(left,  #7db9e8 1%,#207cca 15%,#1e5799 44%,#207cca 85%,#2989d8 100%); /* IE10+ */
  background: linear-gradient(to right,  #7db9e8 1%,#207cca 15%,#1e5799 44%,#207cca 85%,#2989d8 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#7db9e8', endColorstr='#2989d8',GradientType=1 ); /* IE6-9 */

}

.airprogressBig {
  width: 100%;
  height: 20px;
  background: #131313; /* Old browsers */
  background: -moz-linear-gradient(top,  #131313 0%, #1c1c1c 19%, #3a3a3a 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#131313), color-stop(19%,#1c1c1c), color-stop(100%,#3a3a3a)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #131313 0%,#1c1c1c 19%,#3a3a3a 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #131313 0%,#1c1c1c 19%,#3a3a3a 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #131313 0%,#1c1c1c 19%,#3a3a3a 100%); /* IE10+ */
  background: linear-gradient(to bottom,  #131313 0%,#1c1c1c 19%,#3a3a3a 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#131313', endColorstr='#3a3a3a',GradientType=0 ); /* IE6-9 */

}

.airprogressBigInner {
  width: 75%;
  height: 20px;
  background: #7db9e8; /* Old browsers */
  background: -moz-linear-gradient(top,  #7db9e8 4%, #207cca 21%, #207cca 21%, #1e5799 39%, #1e5799 41%, #2989d8 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(4%,#7db9e8), color-stop(21%,#207cca), color-stop(21%,#207cca), color-stop(39%,#1e5799), color-stop(41%,#1e5799), color-stop(100%,#2989d8)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #7db9e8 4%,#207cca 21%,#207cca 21%,#1e5799 39%,#1e5799 41%,#2989d8 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #7db9e8 4%,#207cca 21%,#207cca 21%,#1e5799 39%,#1e5799 41%,#2989d8 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #7db9e8 4%,#207cca 21%,#207cca 21%,#1e5799 39%,#1e5799 41%,#2989d8 100%); /* IE10+ */
  background: linear-gradient(to bottom,  #7db9e8 4%,#207cca 21%,#207cca 21%,#1e5799 39%,#1e5799 41%,#2989d8 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#7db9e8', endColorstr='#2989d8',GradientType=0 ); /* IE6-9 */
}


.bombactivated {
  background-color: white;
  color: red;
  font-weight: bold;
  font-size: 26px;
}

#map {
  position: absolute;
  background-color: blue;
  width: 150px;
  height: 10px;
  top: 0;
  left: 50%;
  display: none;
}
.mapItem {
  width: 30px;
  height: 30px;
  text-align: center;
  color: white;
  border-color: 1px solid white;
  background-color: grey;
  display: inline-block;
}

.mapItemCrt {
  width: 30px;
  height: 30px;
  text-align: center;
  color: white;
  border-color: 1px solid white;
  background-color: blue;
  display: inline-block;
}
